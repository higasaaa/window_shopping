<h1>Admin::Tags#index</h1>
<p>Find me in app/views/admin/tags/index.html.erb</p>
<h2>タグ一覧・追加</h2>

<%= form_with model: @tag, url:admin_tags_path, local:true do |t| %>
  <%= t.text_field :tag_name %>
  <%= t.submit '新規登録' %>
<% end %>

<!--タグ一覧表示-->
<table>
  <thead>
    <tr>
      <th>タグ</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @tags.each do |tag| %>
      <td><%= tag.tag_name %></td>
      <td><%= link_to "編集する", edit_admin_tag_path(tag.id) %></td>
    </tr>
      <% end %>
  </tbody>
</table>