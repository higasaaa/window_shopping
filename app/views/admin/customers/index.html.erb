<h1>Admin::Customers#index</h1>
<p>Find me in app/views/admin/customers/index.html.erb</p>
<table>
<thead>
  <tr>
    <th>会員ID</th>
    <th>username</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
</thead>
<tbody>
  <% @customers.each do |customer| %>
  
  <tr>
    <td><%= customer.id %></td>
    <td><%= customer.nickname %></td>
    <td><%= customer.email %></td>
    <td>
      <% if customer.is_deleted %>
        <div>退会</div>
      <% else %>
        <div>有効</div>
      <% end %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
