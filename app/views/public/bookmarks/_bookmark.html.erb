
<% if coordinate.bookmarked_by?(current_customer) %>
  <%= link_to coordinate_bookmarks_path(coordinate), method: :delete, remote: true, class: "bookmark-btn" do %>
    <i class="fas fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to coordinate_bookmarks_path(coordinate), method: :post, remote: true, class: "unbookmark-btn" do %>
    <i class="fas fa-bookmark"></i>
  <% end %>
<% end %>
