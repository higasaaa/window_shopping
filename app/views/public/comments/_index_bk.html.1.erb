<div class="container ml-auto">

  
  <div class="row ml-auto">
    <div class="col-4 offset-md-1">
      <% coordinate.comments.each do |comment| %>
      <%= image_tag comment.coordinate.get_coordinate_image(100,100) %>
    </div>
    <div class="col-6 offset-md-1">
      <div><%= comment.customer.nickname %></div>
      <div><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.content %></div>
      <div>
        <% if comment.customer == current_customer %>
          <%= link_to "Destroy", coordinate_comment_path(comment.coordinate, comment),method: :delete, remote: true %>
        <% end %>
      </div>  
    </div>
      <% end %>
  </div>
</div>


