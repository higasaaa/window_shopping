<li class="row">
  <div class="p-3"><%= image_tag comment.coordinate.get_coordinate_image(80,80) %></div>
  <div class="p-3">
    <div><%= comment.customer.nickname %></div>
    <div><%= comment.created_at.strftime('%Y/%m/%d') %></div>
    <p><%= comment.content %></p>
    <div>
      <% if comment.customer == current_customer %>
        <%= link_to "Destroy", coordinate_comment_path(comment.coordinate, comment),method: :delete, remote: true %>
      <% end %>
    </div>
  </div>
</li>


