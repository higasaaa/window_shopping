<li class="row">
  <div class="p-3"><%= image_tag comment.coordinate.get_coordinate_image(80,80) %></div>
  <div class="p-3">
    <div style="font-size: 18px;"><%= comment.customer.nickname %></div>
    <div style="font-size: 13px;"><%= comment.created_at.strftime('%Y/%m/%d') %></div>
    <p style="font-size: 16px;"><%= comment.content %></p>
    <div>
      <% if comment.customer == current_customer %>
        <%= link_to "Destroy", coordinate_comment_path(comment.coordinate, comment),method: :delete, remote: true, class: "btn btn-danger pull-right btn-sm" %>
      <% end %>
    </div>
  </div>
</li>


