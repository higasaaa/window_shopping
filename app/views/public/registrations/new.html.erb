

<%= form_with model: @customer,url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<h4 class="col-md-3 offset-3 mt-4" style="font-size-25px background-color: ghostwhite">Sign up</h4><br>
<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-3">
      <h6 class="mt-2"><%= f.label :"nickname" %></h6>
      <h6 class="mt-2"><%= f.label :"email" %></h6>
      <h6 class="mt-2"><%= f.label :"birthday" %></h6>
      <h6 class="mt-2"><%= f.label :"password" %></h6>
      <h6 class="mt-2"><%= f.label :"パスワード確認" %></h6>
      <h6 class="mt-2"><%= f.label :"性別" %></h6>
      <h6 class="mt-2"><%= f.label :"お住まいの地域" %></h6>
    </div>

    <div class="col-md-3">
      <div class="field mb-2">
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>
      <div class="field mb-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field mb-2">
        <%= f.date_select :birthdate, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
      </div>
      <div class="field mb-2">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field mb-2">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="field mb-2">
        <%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {} %>
      </div>
      <div class="field mb-2">
        <%= f.text_field :live_area %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    </div>
  </div>
</div>




<% end %>

<%= render "public/shared/links" %>
