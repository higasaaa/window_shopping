<div class="container">
<h1 class="d-inline-block px-3 mb-4 mt-4">Coordinate detail</h1>
  <div class="row my-5">
    <div><%= image_tag @coordinate.get_coordinate_image, style: "height: 400px; width: 400px; object-fit: contain;" %></div>
    <div class="col-sm-12 col-md-6">
      <div class="mt-3 ml-3" style="font-size: 20px;">
        Posted date :
        <%= l @coordinate.created_at %>
      </div>

      <div class="mt-3 ml-3" style="font-size: 20px;">
        Price :
       ￥<%= @coordinate.total_price.to_s(:delimited) %>
      </div>

      <div class="mt-3 ml-3" style="font-size: 20px;">
        Tag  :
        <%= @coordinate.tag.tag_name %>
      </div>

      <div class="mt-3 ml-3" style="font-size: 20px;">
        favorites | Bookmarks
      </div>
        <!--いいね機能-->
      <div id="favorite_buttons_<%= @coordinate.id %>" class="mt-3 ml-3 mx-5" style="float: left;">
        <%= render "public/favorites/favorite", coordinate: @coordinate %>
      </div>
        <!--ブックマーク-->
      <div id="bookmark_buttons_<%= @coordinate.id %>" class="mt-3 ml-3" style="float: lef;">
        <%= render "public/bookmarks/bookmark", coordinate: @coordinate %>
      </div>

      <div class="mt-3 ml-3 my-3" style="font-size: 20px; overflow:  hidden;">
        Description :
        <p><%= @coordinate.coordinates_description %></p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-12 col-md-6">
    <h2 class="my-3 d-inline-block ml-auto" style="font-size: 25px; background-color: #f2f2f2;">Comments</h2>
    <!--コメント一覧の-->
    <ul>
      <div id="comments-area">
        <%= render "public/comments/index", coordinate: @coordinate %>
      </div>
    </ul>
    <!--コメント投稿フォームテンプレート-->
    <div class="ml-5">
      <%= render "public/comments/form", coordinate: @coordinate, comment: @comment %>
    </div>
  </div>
</div>