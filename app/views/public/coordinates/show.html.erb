<h1>Public::Coordinates#show</h1>
<p>Find me in app/views/public/coordinates/show.html.erb</p>
<h2>コーディネート詳細</h2>

<table>
  <thead>
    <tr>
      <th><%= image_tag @coordinate.get_coordinate_image(100,100) %></th>
      <th>コーディネート合計</th>
      <th>タグ名</th>
      <th>コーディネート説明</th>
      <th>いいね数</th>
      <th>コメント数</th>
    </tr>
    <tr>
      <td></td>
      <td><%= @coordinate.total_price %></td>
      <td><%= @coordinate.tag.tag_name %></td>
      <td><%= @coordinate.coordinates_description %></td>
      <td><%= @coordinate.favorites.count %></td>
      <td>コメント数入る</td>
    </tr>
  </thead>
</table>

<!--コメントテンプレート-->
<%= render "public/comments/index", coordinate: @coordinate %>

<!--コメント投稿フォームテンプレート-->
<%= render "public/comments/form", coordinate: @coordinate, comment: @comment %>

<div>
  このコーディネートに対するコメント一覧は<%#= link_to "こちら", coordinate_comments_path(coordinate_id) %>
</div>